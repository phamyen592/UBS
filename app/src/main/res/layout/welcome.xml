<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Existing User"
        android:id="@+id/existingUser"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/firstUser"
        android:layout_alignStart="@+id/firstUser"
        android:textColor="red"
        android:background="#e093e5" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="First Time Login"
        android:id="@+id/firstUser"
        android:layout_below="@+id/existingUser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="#e093e5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="welcome to UBS!"
        android:id="@+id/welcomeText"
        android:layout_alignParentTop="true"
        android:layout_marginTop="51dp"
        android:textSize="@dimen/abc_action_bar_stacked_max_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:theme="@style/Animation.Design.BottomSheetDialog"
        android:textColor="#0e38a9" />


</RelativeLayout>